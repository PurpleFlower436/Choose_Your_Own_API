<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/kitty_generator_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kitty Generator!"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />


    <ImageView
        android:id="@+id/rdj_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/kitty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kitty_generator_header"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_random_kitty"
        android:layout_width="220dp"

        android:layout_height="110dp"
        android:layout_marginStart="92dp"
        android:text="Get a random picture of a kitten"
        android:textSize="25dp"
        android:backgroundTint="@color/french_rose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rdj_pic">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>